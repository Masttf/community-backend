		<result column="received_user_id" property="receivedUserId" />
		<!--文章ID -->
		<result column="article_id" property="articleId" />
		<!--文章标题 -->
		<result column="article_title" property="articleTitle" />
		<!--评论ID -->
		<result column="comment_id" property="commentId" />
